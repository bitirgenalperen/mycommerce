<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Review</h1>
    <div class="col-6 offset-3">
    <form class="d-grid gap-2" action="/items/<%=itemId%>/reviews/<%=review._id%>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="rating">Rating</label>
            <input type="range" class="form-range" min="1" max="5" value="<%=review.rating%>" name="rating" id="rating">
            <div class="d-flex justify-content-between">
              <small>1</small>
              <small>5</small>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="content">Review</label>
            <textarea class="form-control" type="text" name="content" id="content" 
            placeholder="Review content" style="resize:none" rows="4"><%=review.content%></textarea>
        </div>   
        <button class="btn btn-info mx-auto">Update</button>
    </form>
    </div>
    </div>
    <a class="btn btn-danger mt-5" role="button" href="/items/<%=itemId%>">Cancel</a>